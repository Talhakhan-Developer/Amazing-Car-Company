<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact | Amazing Car Company</title>
    <!-- Fav Icon -->
    <link rel="shortcut icon" href="pic/Logo/Favicon.png" type="image/x-icon">
    <!-- fontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200;300;400;600;700;800&display=swap" rel="stylesheet">
    <!-- Bootstrap + css -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <!-- Navbar Start -->
    {{> nav}}
    <!-- Navbar End -->

    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0">
      <div class="container-fluid page-header-inner py-5">
          <div class="container text-center">
              <h1 class="display-3 text-white mb-3 animated slideInDown">Contact Us</h1>
              <nav aria-label="breadcrumb">
                  <ol class="breadcrumb justify-content-center text-uppercase">
                      <li class="breadcrumb-item"><a href="#">Home</a></li>
                      <li class="breadcrumb-item text-white active" aria-current="page">Contact Us</li>
                  </ol>
              </nav>
          </div>
      </div>
    </div>
    <!-- Page Header End -->

    <!-- Contact Form -->
    <div class="container pt-5 mb-5 text-center">
      <div class="contact-text text-center pb-5">
        <h2>Get In Touch</h2>
      </div>
      <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12 mb-4">
          <div class="contact-map">
            <iframe class="position-relative rounded w-100" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d419410.1818867859!2d72.35829760000003!3d34.7897856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1654169000410!5m2!1sen!2s" width="450" height="365" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
          <form method="POST" action="/contact">
            <div class="row g-3">
                <div class="col-12 col-sm-6">
                    <input name="name" type="text" class="form-control" placeholder="Your Name" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <input name="number" type="number" class="form-control" placeholder="Number" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                    <input name="email" type="email" class="form-control" placeholder="Your Email" style="height: 55px;">
                </div>
                <div class="col-12 col-sm-6">
                  <select name="services" class="form-select" style="height: 55px;">
                      <option selected>Select A Service</option>
                      <option value="1">Diagnostic</option>
                      <option value="2">Batteries</option>
                      <option value="3">Breaks</option>
                      <option value="4">Engine Repair</option>
                      <option value="5">Tire Replacement</option>
                      <option value="6">Transmission</option>
                  </select>
              </div>
                <div class="col-12">
                    <textarea name="message" class="form-control " placeholder="Message" ></textarea>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <button class="btn btn-search w-100 py-3" type="submit">Send Message</button>
                </div>
            </div>
        </form>
        </div>
      </div>
    </div>
    <!-- Contact Form -->

    <!-- contact location -->
    <div class="container mb-5">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="location-wrap">
            <div class="location-icon">
              <i class="bi bi-telephone-fill"></i>
            </div>
            <div class="location-text">
              <h2>Call Us Now</h2>
              <span>+92 340 9241528</span>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="location-wrap">
            <div class="location-icon">
              <i class="bi bi-envelope-fill"></i>
            </div>
            <div class="location-text">
              <h2>Mail Us Today</h2>
              <span>iamtalhakhn@gmail.com</span>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="location-wrap">
            <div class="location-icon">
              <i class="bi bi-geo-alt-fill"></i>
            </div>
            <div class="location-text">
              <h2>Our Location</h2>
              <span>150 street, Swat, Pakistan</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- contact location -->
    <!-- Footer  -->
    <div class="footer-area">
      <div class="footer-top">
        <div class="container">
          <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="site-logo"><a href="index.html"><img src="pic/Logo/LogoFooter.png" alt="Logo Pic"></a></div>
              <p class="text-white ">Lorem ipsum dolor sit amet consectetur adipisicing elit. Est eligendi doloremque, quae quo repellendus expedita.</p>
              <div class="social-icon-footer">
                <ul class="d-flex">
                  <li><i class="fa fa-facebook"></i></li>
                  <li><i class="fa fa-twitter"></i></li>
                  <li><i class="fa fa-instagram"></i></li>
                  <li><i class="fa fa-google-plus"></i></li>
                </ul>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <h4 class="footer-h4 mb-4">Address</h4>
              <p class="text-white mb-3 footer-icon"><i class="bi bi-geo-alt"></i> 150 street, Swat, Pakistan</p>
              <p class="text-white mb-3 footer-icon"><i class="bi bi-telephone"></i> +92 340 9241528</p>
              <p class="text-white mb-3 footer-icon"><i class="bi bi-envelope"></i> iamtalhakhn@gmail.com</p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <h4 class="footer-h4 mb-4">Opening Hours</h4>
              <h6 class="text-white">Monday-Friday</h6>
              <p class="text-white mb-4">09:00 AM - 09:00 PM</p>
              <h6 class="text-white">Saturday-Sunday</h6>
              <p class="text-white mb-4">09:00 AM - 02:00 PM</p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <h4 class="footer-h4 mb-3">Services</h4>
              <ol class="text-white services-style">
                <li>Diagnostic</li>
                <li>Batteries</li>
                <li>Breaks</li>
                <li>Engine Repair</li>
                <li>Tire Replacement</li>
                <li>Transmission</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <div class="container">
          <div class="row text-center">
            <div class="col-12">
              <span>Privacy Policy | Â© 2022 Amazing Car Company.  All rights reserved</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer  -->

   <!-- Back to Top -->
   <button type="button" class="btn btn-floating btn-lg" id="btn-back-to-top">
    <i class="bi bi-arrow-up-circle-fill"></i>
  </button>
  <!-- Back to Top -->
   
    
  
  <script src="js/bootstrap.js"></script>
  <script src="js/index.js"></script>
</body>
</html>